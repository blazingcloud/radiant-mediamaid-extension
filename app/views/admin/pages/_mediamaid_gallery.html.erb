<div id="mediamaid_partial">
	<script src="/javascripts/admin/mediamaid.js" type="text/javascript" ></script>
	<div id="mediamaid_head"><div id="mediamaid_title">Media Gallery</div><div id="ClickImageMsg" style="display:none;"><br />Click thumbnail to insert into post</div></div>
	<div id="mediamaid_gallery" style="display:none;">
<% 
   @mediamaids = Mediamaid.find(:all) 
   @mediamaids.each do |m|%>
  	 <div class="mediamaid_files">
	    <%	    
	if (m.mediamaid.url(:thumb)) # show this only if there's a thumb available
	    len = "#{m.mediamaid.url(:original)}".length - 3

		image_url = m.mediamaid.url(:thumb)
		if m.mediamaid.url(:original)[len,3] == "wav"
			image_url = "/images/admin/gallery_wav.jpg"	
		end 
		if m.mediamaid.url(:original)[len,3] == "swf"
			image_url = "/images/admin/gallery_swf.jpg"	
		end
		if m.mediamaid.url(:original)[len,3] == "pdf"
			image_url = "/images/admin/gallery_pdf.jpg"	
		end

		%>
				<div class="div_link">
				<div class="mediamaid_thumbnail_wrapper">
					<div class="shadow5">
					<div class="shadow4">
					<div class="shadow3">
					<div class="shadow2">
					<div class="shadow1">
						<a href="#" onClick="insertAtCaret('<%=m.mediamaid.url(:original) %>', '<%=m.mediamaid_content_type%>'); return false; ">
							<div class="shadow_border">
									<img class="mediamaid_thumbnail" src="<%=image_url%>" alt="<%=m.mediamaid_file_name %>" />
							</div>
						</a>
					</div>	
					</div>	
					</div>	
					</div>	
					</div>
				</div>
			</div>
			<h3><%=m.mediamaid_file_name %></h3>
		
			<%
	else   # if no thumb, just show filename
		link_to m.mediamaid_file_name, :action=> "show", :id => m
	end
		%>
		</div>
<% end %>
	</div>
	<p class="more_or_less" padding:4px 0 5px;>
	<a id="more_mediamaid_gallery" href="javascript: $('mediamaid_gallery').show();$('ClickImageMsg').show(); $('less_mediamaid_gallery').show(); $('more_mediamaid_gallery').hide(); this.stop()" style="background: #7e7e7e;" >View Images</a>
	<a id="less_mediamaid_gallery" style="display:none; background: #7e7e7e;" href="javascript: $('mediamaid_gallery').hide();$('ClickImageMsg').hide(); $('more_mediamaid_gallery').show(); $('less_mediamaid_gallery').hide(); this.stop()">Hide Images</a></p>
