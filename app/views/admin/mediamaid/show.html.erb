<h3><%= @mediamaid.mediamaid_file_name %> Information</h3>
<p><table cellpadding=5>
	<tr><td>Content Type:</td><td> <strong><%= @mediamaid.mediamaid_content_type %></strong></td></tr>
	<tr><td>Size:</td><td> 
	<% size = @mediamaid.mediamaid_file_size 
	
	if (size> 1000)
		units = "KB"
		divSize = size/1000
	elsif ( size > 1000000 )
		divSize = size/1000000
		units = "MB"
	else 
		divSize = size
		units = "bytes"
	end
		%>
		<strong><%=divSize %></strong> <%= units %> 
		<% if units != "bytes"%>(<%=size%> bytes)<% end %>
	</td>	</tr>
	<tr><td>Upload Date:</td><td><strong><%= @mediamaid.created_at.mon %>/<%= @mediamaid.created_at.day%>/<%= @mediamaid.created_at.year%></strong></td></tr>

<% if @mediamaid.mediamaid_content_type =~ /image/ %>
		<tr><td colspan="2"><h2>Image Sizes</h2></td></tr>
		<tr><td>Thumbnail:</td><td><%= image_tag @mediamaid.mediamaid.url(:thumb) %>
		<tr><td>Original</td><td>	<%= image_tag @mediamaid.mediamaid.url(:original) %></td></tr>
<% end %>
<tr><td background-color="#A0A0A0" colspan="2"></td></tr>
	<tr><td colspan="2">
	<%= link_to image_tag('/images/admin/remove.png'),  remove_admin_mediamaid_url(@mediamaid),:confirm=>"Are you sure?"%> 
	</td></tr>
</table>
