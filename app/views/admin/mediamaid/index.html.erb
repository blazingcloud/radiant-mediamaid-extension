
<p>Add a media element:</p>
<%= error_messages_for "mediamaid" %>

<% form_for :mediamaid, :url  => { :action  => "create" }, :html  => { :multipart  => true } do |f| %>

<p>Browse your computer: <%= f.file_field :mediamaid%></p>
<%= f.submit name="Upload"%>
<% end %>

<table cellpadding=5 border=0>
	<tr>
<th>Thumbnail</th><th>Filename</th><th>Content-Type</th><th>Remove</th></tr>
<% @mediamaids.each do |m| %>
	<tr>
		
		<td><%= link_to image_tag (m.mediamaid.url(:thumb)), :action => "show", :id  => m%> </td>
	  
	    <td><%= link_to m.mediamaid_file_name, :action => "show", :id  => m %> </td>
	<td><%= link_to m.mediamaid_content_type, :action => "show", :id  => m %> </td>
    <td><%= link_to 'remove', admin_mediamaid_url(m), :method => "delete", :id  => m %> </td>
	</tr>
<% end %>
</table>
		